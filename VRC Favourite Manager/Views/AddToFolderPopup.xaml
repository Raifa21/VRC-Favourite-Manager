<ContentDialog
    x:Class="VRC_Favourite_Manager.Views.AddToFolderPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRC_Favourite_Manager.Views"
    xmlns:vm="using:VRC_Favourite_Manager.ViewModels"
    Title="Add to Folder"
    PrimaryButtonText="Cancel"
    PrimaryButtonClick="CloseButton_Click"
    SecondaryButtonText="Confirm"
    SecondaryButtonClick="ConfirmButton_Click">

    <Grid Width="250" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Margin="10,40,10,10">
            <TextBlock Text="Select Folders" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <ItemsControl ItemsSource="{Binding Folders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Add Folder" Click="AddFolderButton_Click" Margin="0,10,0,0"/>

            <TextBlock Text="{Binding SelectedWorld.WorldName, Converter={StaticResource StringFormatConverter}, ConverterParameter='By {0}'}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</ContentDialog>