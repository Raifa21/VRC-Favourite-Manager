<ContentDialog
    x:Class="VRC_Favourite_Manager.Views.DeletePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:VRC_Favourite_Manager.ViewModels">

    <Grid Width="320" Height="160" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Click="CloseButton_Click"
                Margin="0,-10,-10,0"
                Style="{StaticResource CloseButtonStyle}">
            <FontIcon Glyph="&#xE711;" />
        </Button>
        <TextBlock x:Name="DeleteWorlds" FontSize="14" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ConfirmMessage" Margin="2,40,0,0" TextWrapping="WrapWholeWords"/>
        <TextBlock x:Name="ConfirmExplanation" Margin="2,70,0,0" FontSize="11" TextWrapping="WrapWholeWords"/>

        <Button x:Name="ConfirmButton" Click="ConfirmButton_Click" Margin="0,25,0,0" Width="320"  VerticalAlignment="Bottom" Background="Red" Foreground="White" />
    </Grid>
</ContentDialog>