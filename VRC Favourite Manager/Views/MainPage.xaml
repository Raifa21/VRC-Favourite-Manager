<Page
    x:Class="VRC_Favourite_Manager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRC_Favourite_Manager.Views"
    xmlns:viewModels="using:VRC_Favourite_Manager.ViewModels"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:VRC_Favourite_Manager.Models"
    xmlns:converters="using:VRC_Favourite_Manager">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    </Page.Resources>


    <Page.DataContext>
        <viewModels:MainViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Pivot Control for switching between folders -->
            <muxc:Pivot ItemsSource="{Binding Folders}" SelectedItem="{Binding SelectedFolder}" Grid.Row="0">
                <muxc:Pivot.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </muxc:Pivot.ItemTemplate>

                <!-- Pivot content template to show folder details -->
                <muxc:Pivot.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" />
                    </DataTemplate>
                </muxc:Pivot.HeaderTemplate>

                <muxc:Pivot.Items>
                    <muxc:PivotItem Header="Worlds">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="Worlds" FontSize="24" FontWeight="Bold"/>
                            <Button Content="Add Folder" Command="{Binding AddFolderCommand}" CommandParameter="NewFolder" Margin="10,0,0,0"/>
                            <Button Content="Move World to Selected Folder" Command="{Binding MoveWorldCommand}" CommandParameter="{Binding SelectedWorld}" Margin="10,0,0,0"/>

                            <muxc:GridView ItemsSource="{Binding SelectedFolder.Worlds}" Margin="10">
                                <muxc:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Image Source="{Binding ThumbnailImageUrl}" Width="100" Height="100"/>
                                            <TextBlock Text="{Binding WorldName}" FontWeight="Bold"/>
                                            <TextBlock Text="Capacity: {Binding Capacity}"/>
                                            <TextBlock Text="Author: {Binding AuthorName}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </muxc:GridView.ItemTemplate>
                            </muxc:GridView>
                        </StackPanel>
                    </muxc:PivotItem>
                </muxc:Pivot.Items>
            </muxc:Pivot>
        </Grid>
    </Grid>
</Page>