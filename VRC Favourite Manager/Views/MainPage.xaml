<Page
    x:Class="VRC_Favourite_Manager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRC_Favourite_Manager"
    xmlns:viewModels="using:VRC_Favourite_Manager.ViewModels"
    xmlns:models="using:VRC_Favourite_Manager.Models">

    <Page.DataContext>
        <viewModels:MainViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <TextBlock Text="Favorite Worlds" FontWeight="Bold"/>
            <ListView ItemsSource="{Binding FavoriteWorlds}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:WorldModel">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageUrl}" Width="50" Height="50"/>
                            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="Capacity: {Binding Capacity}"/>
                                <TextBlock Text="Recommended Capacity: {Binding RecommendedCapacity}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
