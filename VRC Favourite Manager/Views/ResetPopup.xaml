<ContentDialog
    x:Class="VRC_Favourite_Manager.Views.ResetPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Width="220" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Click="CloseButton_Click"
                Margin="0,-12,-30,0"
                Style="{StaticResource CloseButtonStyle}">
            <FontIcon Glyph="&#xE711;" />
        </Button>
        <TextBlock x:Name="DeleteWorlds" FontSize="14" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ConfirmMessage" Margin="2,30,0,0" TextWrapping="WrapWholeWords"/>
        <TextBlock x:Name="ConfirmMessage2" Margin="2,50,0,0" TextWrapping="WrapWholeWords"/>

        <Button x:Name="ConfirmButton" Click="ConfirmButton_Click" Margin="0,25,0,0" Width="220"  VerticalAlignment="Bottom" Background="Red" />
    </Grid>
</ContentDialog>