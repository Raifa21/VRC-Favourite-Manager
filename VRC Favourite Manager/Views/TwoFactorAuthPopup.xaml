<ContentDialog
    x:Class="VRC_Favourite_Manager.Views.TwoFactorAuthPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRC_Favourite_Manager.Views"
    Title="Enter OTP"
    PrimaryButtonText="Cancel"
    SecondaryButtonText="Submit"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBlock x:Name="Subtitle" Margin="0,0,0,10"/>
        <TextBlock x:Name="Description" Margin="0,0,0,10"/>
        <TextBox x:Name="OtpTextBox" />
    </StackPanel>
</ContentDialog>