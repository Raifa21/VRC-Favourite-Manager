<!-- WorldDetailsDialog.xaml -->
<ContentDialog
    x:Class="VRC_Favourite_Manager.Views.WorldDetailsPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRC_Favourite_Manager.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Close Button in the Top Right Corner -->
        <Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="CloseButton_Click"
                Margin="0,0,0,0"
                Style="{StaticResource CloseButtonStyle}"/>

        <StackPanel>
            <Image Source="{Binding ThumbnailImageUrl}" Width="200" Height="200"/>
            <TextBlock Text="{Binding WorldName}" FontWeight="Bold" FontSize="20"/>
            <TextBlock Text="{Binding Capacity, Converter={StaticResource StringFormatConverter}, ConverterParameter='Capacity: {0}'}"/>
            <TextBlock Text="{Binding AuthorName, Converter={StaticResource StringFormatConverter}, ConverterParameter='Author: {0}'}"/>
            <TextBlock Text="{Binding Description}"/>
        </StackPanel>

        <Button Content="Create Instance"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="20"
                Click="CreateInstanceButton_Click"/>

    </Grid>
</ContentDialog>